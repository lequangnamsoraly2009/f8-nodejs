<div class="container">
    <div class="row">
        <div class="col l-12 c-12 m-12">
            <div class="main-login">

                <form method="POST" action="/auth/sign-up" class="form" id="form-1">
                    <h3 class="heading">SIGN-UP</h3>
                    <p class="desc">Become new member with Soraly ü§û </p>

                    <div class="form-group">
                        <label for="fullname" class="form-label">Full Name üò±</label>
                        <input id="fullname" name="name" type="text" placeholder="Ex: Soraly" class="form-control">
                        <span class="form-message"></span>
                    </div>

                    <div class="form-group">
                        <label for="province" class="form-label">City</label>
                        <select id="province" name="province" class="form-control">
                            <option value="">--Choose--</option>
                            <option value="hcm">Ho Chi Minh City</option>
                            <option value="hno">Ha Noi Capital</option>
                            <option value="dno">Dak Nong Province</option>
                            <option value="dna">Da Nang City</option>
                        </select>
                        <span class="form-message"></span>
                    </div>

                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input id="email" name="email" type="email" placeholder="Ex: email@domain.com"
                            class="form-control">
                        <span class="form-message"></span>
                    </div>

                    <div class="form-group">
                        <label for="password" class="form-label">Password üëÄ</label>
                        <input id="password" name="password" type="password" placeholder="Password"
                            class="form-control">
                        <span class="form-message"></span>
                    </div>

                    <div class="form-group">
                        <label for="password_confirmation" class="form-label">Confirm Password ü§¶‚Äç‚ôÄÔ∏è</label>
                        <input id="password_confirmation" placeholder="Confirm Password"
                            type="password" class="form-control">
                        <span class="form-message"></span>
                    </div>

                    <button type="submit" class="form-submit btn">Sign-Up</button>
                </form>

            </div>
        </div>
    </div>
</div>

<script src="/javascripts/validate.js"></script>

<script>
    Validator({
        form: '#form-1',
        formInputGroup: '.form-group',
        rules: [
            Validator.isRequired('#fullname'),
            Validator.isEmail('#email', 'This is not Email'),
            Validator.minLength('#password', 6, 'Please enter this field'),
            Validator.isRequired('#password_confirmation'),
            Validator.isRequired('#province'),
            Validator.isMatched('#password_confirmation', () => {
                return document.querySelector('#form-1 #password').value
            }, 'Password is not match')
        ],
        errorSelector: '.form-message',
  
    });
</script>